<?xml version="1.0" encoding="utf-8"?>
<UiClasses.CustomLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/backgroundvector"
        tools:context="com.example.mark0.easyukrainian.InitActivity">
    <RelativeLayout android:background="@drawable/cornercard"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
        <LinearLayout android:layout_width="300dp" android:id="@+id/pic"
                      android:gravity="center" android:layout_height="350dp"
                      android:orientation="vertical">
            <!--<ImageView
                    android:id="@+id/webView"
                    android:layout_width="256dp"
                    android:layout_height="256dp"
                    android:src="@drawable/loading"/>-->
            <com.pnikosis.materialishprogress.ProgressWheel
                    android:id="@+id/spin"
                    android:layout_width="256dp"
                    android:layout_height="256dp"
                    app:matProg_barColor="#0057b8"
                    app:matProg_rimColor="#ffd700"
                    app:matProg_spinSpeed="0.25"
                    app:matProg_progressIndeterminate="true"
            />
            <TextView
                    android:textAlignment="center"
                    android:id="@+id/header"
                    android:layout_below="@id/spin"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
            />
        </LinearLayout>

    </RelativeLayout>
</UiClasses.CustomLayout>
