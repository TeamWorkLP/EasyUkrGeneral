<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:background="@drawable/backgroundvector"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:theme="@style/ThemeOverlay.AppCompat.Dark"
              android:orientation="horizontal"
>

    <LinearLayout android:paddingLeft="12dp" android:layout_width="150dp" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:background="@color/whiteStockAlpha">
        <UiClasses.CircleImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user1"
                android:id="@+id/imageDrawerAvatar"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userDrawerText"
                android:text="Android Studio"
                android:textSize="@dimen/body"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="andr"
                android:textColor="#000000"
                android:id="@+id/mailDrawerText"
                android:textSize="@dimen/body"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="match_parent"    >
        <UiClasses.CircleImageView
                android:visibility="invisible"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/pencil"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:onClick="editProfile"/>
    </RelativeLayout>

</LinearLayout>
