
@model EasyUkr.WebApi.Models.ViewModels.TopicWord
@{
    ViewBag.Title = "Create Topic";
}
<body>
    <center>
        <h2>Addind new topic</h2>
        @using (Html.BeginForm("CreateTopic", "Dictionary", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <center>
                <p>Header Ukr</p>
                @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
                <p>Transcription of header(<a href="https://en.wikipedia.org/wiki/Help:IPA_for_Ukrainian">IPA examples</a>)</p>
                @Html.TextBoxFor(x => x.Transcription, new { @class = "form-control" })
                <p>Translate Eng</p>
                @Html.TextBoxFor(x => x.Translate, new { @class = "form-control" })
                <h3>Choose image</h3>
                <div class="editor-field">
                    <input class="btn btn-info" type="file" name="uploadImage" />
                </div>
                <br />
                <p>
                    <input class="btn btn-info" type="submit" value="Add" />
                </p>
            </center>
        }
        <br/>
        <div>
            @Html.ActionLink("Back to previous page", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-primary" })
        </div>
    </center>
</body>



