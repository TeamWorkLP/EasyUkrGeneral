@model EasyUkr.WebApi.Models.ViewModels.Recommendation
@{
    ViewBag.Title = "CreateGrammar";
}
<body>
    <center>
        <h2>Adding new recomendation</h2>
        @using (Html.BeginForm("CreateRecommendation", "Recommendation", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <center>
                <p>Recomendation header (UKR)</p>
                @Html.TextBoxFor(x => x.HeaderUkr, new { @class = "form-control" })
                <p>Recomendation header (ENG)</p>
                @Html.TextBoxFor(x => x.TranslateEng, new { @class = "form-control" })
                <p>Link:</p>
                @Html.TextBoxFor(x => x.UrlLink, new { @class = "form-control" })
                <h3>Выберите файл для загрузки</h3>
                <div class="editor-field">
                    <input class="btn btn-info" type="file" name="uploadFile" />
                </div>
                <p>
                    <input class="btn btn-info" type="submit" value="Добавить" />
                </p>
            </center>
        }
        <br />
        <div>
            @Html.ActionLink("Back to previous page", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-primary" })
        </div>
    </center>
</body>

