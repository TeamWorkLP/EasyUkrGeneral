@model EasyUkr.WebApi.Models.ViewModels.TopicWord
@{
    ViewBag.Title = "Create Grammar";
}
<body>
<center>
    <h2>Adding new grammar category</h2>
    @using (Html.BeginForm("CreateGrammar", "Grammar", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <center>
            <p>Header</p>
            @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
            <p>Translate</p>
            @Html.TextBoxFor(x => x.Translate, new { @class = "form-control" })
            <h3>Choose document</h3>
            <div class="editor-field">
                <input class="btn btn-info" type="file" name="uploadDoc"/>
            </div>
    <br />
    <p>
        <input class="btn btn-info" type="submit" value="Add" />
    </p>
</center>
    }
    <br/>
    <div>
        @Html.ActionLink("Back to previous page", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-primary" })
    </div>
</center>
</body>
