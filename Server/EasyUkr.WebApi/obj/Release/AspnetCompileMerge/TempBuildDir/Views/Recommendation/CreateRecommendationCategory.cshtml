@model EasyUkr.WebApi.Models.ViewModels.TopicWord
@{
    ViewBag.Title = "CreateRecomendation";
}
<body>
    <center>
        <h2>Addind new recomendarion category</h2>
        @using (Html.BeginForm("CreateRecommendationCategory", "Recommendation", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <center>
                <p>Header(UKR)</p>
                @Html.TextBoxFor(x => x.Header, new { @class = "form-control" })
                <p>Translate(ENG)</p>
                @Html.TextBoxFor(x => x.Translate, new { @class = "form-control" })
                <h3>Choose image</h3>
                <div class="editor-field">
                    <input class="btn btn-info" type="file" name="uploadFile" />
                </div>
                <br />
                <p>
                    <input class="btn btn-info" type="submit" value="Добавить" />
                </p>
            </center>
        }
        <br />
        <div>
            @Html.ActionLink("Back to previous page", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-primary" })
        </div>
    </center>
</body>