@using System.Diagnostics
@model EasyUkr.DataAccessLayer.Entities.Grammar.GrammarTask

@{
    ViewBag.Title = "Create Task";
}
<style type="text/css">
    table {
        border-collapse: collapse;
    }

    td, th {
        width: 33.333%;
        padding: 6px;
        text-align: center
    }
</style>
<body>
<center>
    <h2>Adding new task</h2>
    @using (Html.BeginForm("CreateGrammarTask", "Grammar"))
    {
        <center>
            <p>Header UKR</p>
            @Html.TextBoxFor(x => x.HeaderUkr, new { @class = "form-control" })
            <p>Translate ENG</p>
            @Html.TextBoxFor(x => x.TranslateEng, new { @class = "form-control" })
            <p>Description</p>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        </center>
        <br/>
        <p>Add answer</p>
        <p>
            <input class="form-control" type="text" name="answerText" />
            <br/>
            <label>Correct?</label>
            <input type="checkbox" name="answerCheck" />
            <br />
            <input class="btn btn-info" type="submit" name="submitEvent" value="Add" />
        </p>
        <table class="table-bordered">
            <tr><th>Text</th><th>Is correct</th></tr>
            @if (Model != null)
            {
                foreach (var answer in Model.GrammarAnswers)
                {
                    <tr>
                        <td><center>@answer.Answer</center></td>

                        <td>
                            <center>
                                @if (answer.IsCorrect.Value)
                                {
                                    <input type="checkbox" disabled="disabled" checked="checked"/>
                                }
                                else
                                {
                                    <input type="checkbox" disabled="disabled"/>
                                }
                            </center>
                        </td>
                    </tr>
                }
            }
        </table>
        <br />
        <input class="btn btn-info" type="submit" name="submitEvent" value="Save"/>
    }
       <br/>
    <div>
        @Html.ActionLink("Back to previous page", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-primary" })
    </div>
</center>
</body>

