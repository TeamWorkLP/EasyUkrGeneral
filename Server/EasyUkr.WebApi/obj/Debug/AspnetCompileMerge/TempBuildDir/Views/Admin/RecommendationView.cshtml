@model System.Data.Entity.DbSet<EasyUkr.DataAccessLayer.Entities.Recommendation.RecommendationCategory>

@{
    ViewBag.Title = "Recomendations";
}
<link rel="stylesheet" href="~/Content/EasyUkrStyles/Common.css" type="text/css" />
<link rel="stylesheet" href="~/Content/EasyUkrStyles/Table.css" type="text/css" />
<link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
<body>
<div class="container" style="text-align: center; width: 350px">
    <h2>Recomendations</h2>
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item" style="margin-bottom: 2px;">
                <a href="@Url.Action("RecommendationListView", new {id = item.Id})">
                    <table>
                        <tr>
                            <td>
                                
                                <div style="width: auto; height: auto">
                                    <img src="@Url.Content(item.FileAdress)" class="img"/>
                                </div>

                            </td>
                            <td>
                                <div style="vertical-align: middle">
                                    @Html.LabelForModel(item.HeaderUkr)
                                    @Html.LabelForModel(item.TranslateEng)
                                </div>
                            </td>
                            <td>
                                <a href="@Url.Action("DeleteRecommendationCategory", "Recommendation", new {id = item.Id})">
                                    <img class="web-icon" src="~/Content/Web_Buttons/garbage.png"/>
                                </a>
                            </td>
                        </tr>
                    </table>
                </a>
            </li>
        }
    </ul>

    <a href="@Url.Action("CreateRecommendationCategory", "Recommendation")" class="btn btn-primary btn-md">Add recomendation topic</a>
    @{
        if ((TempData["TopicSuccess"] != null && (bool)TempData["TopicSuccess"]) || (TempData["DelSuccess"] != null && (bool)TempData["DelSuccess"]))
        {
            <text>
                <script type="text/javascript">
                    alert('Дані оновлені');
                </script>
            </text>
            TempData["TopicSuccess"] = false;
        }
    }
    <br/>
    <div>
        <a href="@Url.Action("AdminPage", "Admin")" class="btn btn-primary btn-md">Back to main page</a>
    </div>
</div>
</body>

